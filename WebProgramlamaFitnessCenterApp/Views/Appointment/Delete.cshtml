@model WebProgramlamaFitnessCenterApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h2>Randevu Sil</h2>
<h4>Bu randevuyu silmek istediğinize emin misiniz?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Tarih</dt>
    <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-3">Saat</dt>
    <dd class="col-sm-9">@Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</dd>

    <dt class="col-sm-3">Antrenör</dt>
    <dd class="col-sm-9">@Model.Trainer?.FullName (@Model.Trainer?.Gym?.Name)</dd>

    <dt class="col-sm-3">Hizmet</dt>
    <dd class="col-sm-9">@Model.Service?.Name</dd>

    <dt class="col-sm-3">Üye</dt>
    <dd class="col-sm-9">@Model.Member?.Email</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</form>
