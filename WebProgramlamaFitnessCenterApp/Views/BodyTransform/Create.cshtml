@model WebProgramlamaFitnessCenterApp.Models.ViewModels.BodyTransformCreateViewModel

@{
    ViewData["Title"] = "Vücut Dönüşüm Tahmini";
}

<h2 class="mt-4">Vücut Dönüşüm Tahmini</h2>
<p class="text-muted">
    Hedefinizi, süreyi ve başlangıç kilonuzu girin, ardından vücut fotoğrafınızı yükleyin.
</p>

<hr />

@if (TempData["Msj"] is string okMsg)
{
    <div class="alert alert-success">@okMsg</div>
}
@if (TempData["HataMsj"] is string errMsg)
{
    <div class="alert alert-danger">@errMsg</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form id="btForm"
      asp-action="Create"
      asp-controller="BodyTransform"
      method="post"
      enctype="multipart/form-data"
      class="mt-3">

    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="GoalType" class="form-label">Hedefiniz</label>
        <select asp-for="GoalType" class="form-select">
            <option value="">-- Hedef Seçiniz --</option>
            <option value="Kilo Verme">Kilo Verme</option>
            <option value="Kas Yapma">Kas Yapma</option>
            <option value="Form Koruma">Form Koruma</option>
        </select>
        <span asp-validation-for="GoalType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DurationMonths" class="form-label">Tahmini Süre (Ay)</label>
        <input asp-for="DurationMonths" type="number" min="1" max="60" class="form-control" />
        <span asp-validation-for="DurationMonths" class="text-danger"></span>
        <div class="form-text">Örn: 3, 6, 12</div>
    </div>

    <div class="mb-3">
        <label asp-for="StartWeightKg" class="form-label">Başlangıç Kilonuz (kg)</label>
        <input asp-for="StartWeightKg" type="number" step="0.1" min="30" max="300" class="form-control" />
        <span asp-validation-for="StartWeightKg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Vücut Fotoğrafınız</label>
        <input asp-for="ImageFile" type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        <div class="form-text">JPG / PNG / WEBP desteklenir.</div>
    </div>

    <div id="loadingBox" class="alert alert-info mt-3" style="display:none;">
        <strong>İşleniyor...</strong> Yapay zekâ görsel üretiyor. Lütfen bekleyin (30-60 sn).
    </div>

    <div class="mt-3 d-flex gap-2">
        <button id="btnSubmit" type="submit" class="btn btn-primary">Dönüşümü Hesapla</button>
        <a asp-action="MyRequests" asp-controller="BodyTransform" class="btn btn-outline-secondary">Geçmiş İsteklerim</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            const form = document.getElementById("btForm");
            const loading = document.getElementById("loadingBox");
            const btn = document.getElementById("btnSubmit");

            if (!form) return;

            // Capture + stopImmediatePropagation => كسر أي كود ثاني يمسك submit
            form.addEventListener("submit", async function (e) {
                e.preventDefault();
                e.stopPropagation();
                if (e.stopImmediatePropagation) e.stopImmediatePropagation();

                if (btn) {
                    btn.disabled = true;
                    btn.dataset.oldText = btn.innerText;
                    btn.innerText = "İşleniyor...";
                }
                if (loading) loading.style.display = "block";

                try {
                    const resp = await fetch(form.action, {
                        method: "POST",
                        body: new FormData(form),
                        headers: {
                            "X-Requested-With": "XMLHttpRequest",
                            "Accept": "application/json"
                        }
                    });

                    // إذا رجع JSON فيه redirectUrl
                    const ct = (resp.headers.get("content-type") || "").toLowerCase();
                    if (ct.includes("application/json")) {
                        const data = await resp.json();
                        if (data && data.redirectUrl) {
                            window.location.href = data.redirectUrl;
                            return;
                        }
                    }

                    // fallback: لو رجع HTML (عادة بسبب ModelState errors)
                    const html = await resp.text();
                    document.open();
                    document.write(html);
                    document.close();
                } catch (err) {
                    alert("Hata: " + err);
                } finally {
                    if (btn) {
                        btn.disabled = false;
                        btn.innerText = btn.dataset.oldText || "Dönüşümü Hesapla";
                    }
                    if (loading) loading.style.display = "none";
                }
            }, true);
        })();
    </script>
}
