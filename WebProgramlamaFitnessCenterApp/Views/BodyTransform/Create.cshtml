@model WebProgramlamaFitnessCenterApp.Models.ViewModels.BodyTransformCreateViewModel

@{
    ViewData["Title"] = "Vücut Dönüşüm Tahmini";
}

<h2 class="mt-4">Vücut Dönüşüm Tahmini</h2>
<p class="text-muted">
    Hedefinizi, süreyi ve başlangıç kilonuzu girin, ardından vücut fotoğrafınızı yükleyin.
</p>

<hr />

@if (TempData["Msj"] is string okMsg)
{
    <div class="alert alert-success">@okMsg</div>
}
@if (TempData["HataMsj"] is string errMsg)
{
    <div class="alert alert-danger">@errMsg</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create"
      asp-controller="BodyTransform"
      method="post"
      enctype="multipart/form-data"
      class="mt-3">

    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="GoalType" class="form-label">Hedefiniz</label>
        <select asp-for="GoalType" class="form-select">
            <option value="">-- Hedef Seçiniz --</option>
            <option value="Kilo Verme">Kilo Verme</option>
            <option value="Kas Yapma">Kas Yapma</option>
            <option value="Form Koruma">Form Koruma</option>
        </select>
        <span asp-validation-for="GoalType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DurationMonths" class="form-label">Tahmini Süre (Ay)</label>
        <input asp-for="DurationMonths" type="number" min="1" max="60" class="form-control" />
        <span asp-validation-for="DurationMonths" class="text-danger"></span>
        <div class="form-text">Örn: 3, 6, 12</div>
    </div>

    <div class="mb-3">
        <label asp-for="StartWeightKg" class="form-label">Başlangıç Kilonuz (kg)</label>
        <input asp-for="StartWeightKg" type="number" step="0.1" min="30" max="300" class="form-control" />
        <span asp-validation-for="StartWeightKg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Vücut Fotoğrafınız</label>
        <input asp-for="ImageFile" type="file" accept=".jpg,.jpeg,.png,.webp" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
        <div class="form-text">JPG / PNG / WEBP desteklenir.</div>
    </div>

    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Dönüşümü Hesapla</button>
        <a asp-action="MyRequests" asp-controller="BodyTransform" class="btn btn-outline-secondary">Geçmiş İsteklerim</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
