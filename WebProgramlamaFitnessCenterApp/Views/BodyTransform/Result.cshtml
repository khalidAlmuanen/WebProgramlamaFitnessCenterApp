@model WebProgramlamaFitnessCenterApp.Models.BodyTransformRequest

@{
    ViewData["Title"] = "Dönüşüm Sonucu";
}

<div class="container mt-4">
    <h2>Dönüşüm Sonucu</h2>
    <hr />

    @if (TempData["Msj"] is string okMsg)
    {
        <div class="alert alert-success">@okMsg</div>
    }
    @if (TempData["HataMsj"] is string errMsg)
    {
        <div class="alert alert-warning">@errMsg</div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <p class="mb-1"><strong>Hedef:</strong> @Model.GoalType</p>
            <p class="mb-1"><strong>Süre (Ay):</strong> @Model.DurationMonths</p>
            <p class="mb-1"><strong>Başlangıç Kilo:</strong> @Model.StartWeightKg</p>
            <p class="mb-1"><strong>Beklenen Değişim (%):</strong> @Model.ExpectedChangePercent</p>
            <p class="mb-0"><strong>Tarih:</strong> @Model.CreatedAt</p>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <h5>Orijinal Fotoğraf</h5>
            @if (!string.IsNullOrWhiteSpace(Model.OriginalImagePath))
            {
                <img src="@Model.OriginalImagePath" class="img-fluid rounded border" />
            }
            else
            {
                <div class="alert alert-danger">Orijinal görsel yolu boş.</div>
            }
        </div>

        <div class="col-md-6">
            <h5>Oluşturulan Tahmin</h5>
            @if (!string.IsNullOrWhiteSpace(Model.GeneratedImagePath))
            {
                <img src="@Model.GeneratedImagePath" class="img-fluid rounded border" />
            }
            else
            {
                <div class="alert alert-warning">AI görseli oluşturulamadı.</div>
            }
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        <a asp-action="Create" asp-controller="BodyTransform" class="btn btn-primary">Yeni İstek</a>
        <a asp-action="MyRequests" asp-controller="BodyTransform" class="btn btn-outline-secondary">Geçmiş İsteklerim</a>
    </div>
</div>
