@model WebProgramlamaFitnessCenterApp.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<h1>Yeni Antrenör Ekle</h1>
<hr />

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specialization" class="form-label"></label>
                <input asp-for="Specialization" class="form-control" placeholder="Örn: Kas Geliştirme, Kilo Verme, Yoga" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GymId" class="form-label"></label>
                <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymId">
                    <option value="">Spor salonu seçiniz</option>
                </select>
                <span asp-validation-for="GymId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ServiceId" class="form-label"></label>
                <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId">
                    <option value="">Ana hizmet seçiniz (opsiyonel)</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

        </div>

        <div class="col-md-6">

            <div class="mb-3">
               <label asp-for="ExperienceYears" class="form-label"></label>
               <input asp-for="ExperienceYears" class="form-control" type="number" />
               <span asp-validation-for="ExperienceYears" class="text-danger"></span>
       </div>

       <div class="mb-3">
              <label asp-for="Rating" class="form-label"></label>
              <input asp-for="Rating" class="form-control" type="number" step="0.1" />
              <span asp-validation-for="Rating" class="text-danger"></span>
       </div>

        </div>
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
