@model IEnumerable<WebProgramlamaFitnessCenterApp.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h2 class="mb-3">Hizmetler</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">
            + Yeni Hizmet Ekle
        </a>
    </p>
}

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Hizmet Adı</th>
            <th>Kategori</th>
            <th>Süre (dk)</th>
            <th>Ücret</th>
            <th>Spor Salonu</th>
            <th style="width:220px;"></th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.DurationMinutes</td>
                <td>@item.Price.ToString("N2")</td>
                <td>@item.Gym?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-info text-white">Detay</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-sm btn-warning ms-1">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger ms-1">Sil</a>
                    }
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center text-muted">
                Kayıtlı hizmet bulunmamaktadır.
            </td>
        </tr>
    }
    </tbody>
</table>
